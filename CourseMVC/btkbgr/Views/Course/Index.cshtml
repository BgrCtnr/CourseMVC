@model IEnumerable<Student>

@if(Model.Count() >0)
{
    <h6 class="display -6">
        
        Başvurular(@Model.Count())
    
    </h6>
    
    <table class = " table table-hover table-striped">
        
        
        <thead>
            
            <tr>
            
            <th>Email</th>
            <th>İsim Soyisim</th>
            <th>Başvuru Zamanı</th>
            <th>Kurs</th>


            </tr>

        </thead>

        <tbody>

            @foreach (Student student in Model)
            {

                <tr>

                    <td>@student.Email</td>
                    <td>@student.İsim @student.Soyisim</td>
                    <td>@student.Zaman</td>
                    <td>@student.Kursİsmi</td>


                </tr>

            }

        </tbody>

    </table>

}
else
{

<div class= "alert alert-info">

    Başvuru bulunmamaktadır. Lütfen başvuru için burayı görüntüleyin.
    <a class="alert-link" asp-action="Goruntule">Goruntule</a>
</div>

}