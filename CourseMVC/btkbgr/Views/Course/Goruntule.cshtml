@model Student

<div class= "display-6">
   Form
</div>

<form method="post" asp-action="Goruntule">

    <div class = "form-group my-4">
        <label asp-for="Email"></label>
        <input asp-for="Email" class = "form-control"/>
    </div>



    <div class = "form-group my-4">
        <label asp-for="İsim"></label>
        <input asp-for="İsim" class = "form-control"/>
    </div>



    <div class = "form-group my-4">
        <label asp-for="Soyisim">Soyisim</label>
        <input asp-for="Soyisim" class = "form-control"/>
    </div>



    <div class = "form-group my-4">
        <label asp-for="Yaş"></label>
        <select asp-for="Yaş">
        <option value="18">18</option>
        <option value="19">19</option>
        <option value="20">20</option>
        <option value="21">21</option>
        <option value="22">22</option>
        <option value="23">23</option>
        <option value="24">24</option>
        <option value="25">25</option>

        </select>
    </div>



    <fieldset>

        <legend>Kurs Seçiniz</legend>

        <p>

            <input id ="mvc" type="radio" asp-for="Kursİsmi" value="Asp.Net Mvc" />
            <label>Asp.Net Mvc</label>
        </p>
        <p>

            <input id ="api" type="radio" asp-for="Kursİsmi" value="Asp.Net Api" />
            <label>Asp.Net Api</label>
        </p>
        <p>

            <input id ="mvc" type="radio" asp-for="Kursİsmi" value="C.Sharp & Unity" />
            <label>CSharp & Unity</label>
        </p>
        <p>

            <input id ="mvc" type="radio" asp-for="Kursİsmi" value="Angular 8" />
            <label>Angular 8</label>
        </p>


    </fieldset>




    <div class = "my-2">

        <button class = "btn btn-primary" type = "submit">Başvur</button>
        <a class = "btn btn-warning" asp-asp-controller="Home" asp-action="Index">Anasayfa</a>
    </div>



</form>